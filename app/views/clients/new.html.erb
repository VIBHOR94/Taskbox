<h3>Add Client</h3>
<%= form_for @client do |f|%>
<%if @client.errors.any? %>
<h4>These erros prvented the form from being saved.</h4>
<ul style="color:red">
	<% @client.errors.full_messages.each do |msg| %>
	<li><%=msg %></li>
	<%end%>
	</ul>
<%end%>  

<label>Name : </label><%=f.text_field :name %><br />
<label>Company : </label><%=f.text_field :company %><br />
<label>Email : </label><%=f.text_field :email %><br />
<label>Mobile : </label><%=f.text_field :mobile %><br />
<%=f.submit%>
<%end%>


