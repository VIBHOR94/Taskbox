<h3>Add Projects</h3>
<%= form_for Project.new do |f|%>
<label>Client</label><br />
<%= f.collection_select :client_id ,Client.all ,:id ,:name ,prompt: "Select Client" %><br />

<label>Name : </label><%=f.text_field :name %><br />
<label>Description : </label><%=f.text_area :description %><br />
<label>Start Date : </label><%=f.date_select :start_date,order:[:day,:month,:year] %><br />
<label>End Date : </label><%=f.date_select :end_date,order:[:day,:month,:year] %><br />
<label>Estimated Budget  : </label><%=f.text_area :estimated_budget %><br />
<%=f.submit%>
<%end%>


